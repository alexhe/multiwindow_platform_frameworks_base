<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50px"
    android:background="@android:color/transparent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/mw_decor_header"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="@drawable/mw_app_header_unfocused"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/mwLaunchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mw_collections_view_as_grid" />
        <TextView
            android:id="@+id/mw_decor_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.95"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:scrollHorizontally="true"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/mwSwapBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mw_full_screen" />

        <ImageButton
            android:id="@+id/mwCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mw_content_remove" />

    </LinearLayout>
</LinearLayout>